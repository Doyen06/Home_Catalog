<h1> Add New Item</h1>

<% if (message.length > 0) { %>
  <p class="success"> <%= message %> </p>
<% } %>

<form action="/items" method="post" enctype="multipart/form-data">
  <div>
    <label for="item"> Name </label>
    <input id="item-name" type="text" name="itemName">
  </div>

  <div>
    <label for="item-Picture"> Picture </label>
    <input id="item-Picture" type="file" name="itemPicture">
  </div>

  <div>
    <label for="room-name"> Room </label>
    <input id="room-name" type="text" name="roomName">
  </div>

  <div>
    <label for="date-purchased"> Date Purchased </label>
    <input id="date-purchased" type="text" name="datePurchased">
  </div>

  <div>
    <label for="condition"> Condition </label>
    <input id="condition" type="text" name="condition">
  </div>

  <div>
    <label for="brand"> Brand </label>
    <input id="brand" type="text" name="brand">
  </div>

  <div>
    <label for="model"> Model </label>
    <input id="model" type="text" name="model">
  </div>

  <div>
    <label for="retailer"> Retailer </label>
    <input id="retailer" type="text" name="retailer">
  </div>

  <div>
    <label for="serial-Number"> Serial Number </label>
    <input id="serial-Number" type="text" name="serialNumber">
  </div>

  <div>
    <label for="purchase-price"> Price </label>
    <input id="purchase-price" type="text" name="purchasePrice">
  </div>

  <div>
    <label for="warranty"> Warranty </label>
    <input id="warranty" type="text" name="warranty">
  </div>

  <div>
    <label for="warranty-Number"> Warranty Number </label>
    <input id="warranty-Number" type="text" name="warrantyNumber">
  </div>

  <div>
    <label for="receipt-picture">Receipt Picture </label>
    <input id="receipt-picture" type="file" name="receiptPicture">
  </div>


  <button> Add Item </button>
</form>
<button onclick="window.location='/my-profile';">Profile</button>
